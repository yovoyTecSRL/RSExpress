<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_delivery_order_list" model="ir.ui.view">
        <field name="name">rsexpress.delivery.order.list</field>
        <field name="model">rsexpress.delivery.order</field>
        <field name="arch" type="xml">
            <list string="√ìrdenes de Entrega" 
                  decoration-info="state == 'new'"
                  decoration-primary="state == 'assigned'"
                  decoration-warning="state in ('pickup', 'package', 'delivering')"
                  decoration-success="state == 'delivered'"
                  decoration-danger="state in ('incident', 'failed')"
                  decoration-muted="state == 'cancelled'">
                <field name="order_code" string="C√≥digo"/>
                <field name="vehicle_id" string="Veh√≠culo"/>
                <field name="driver_id" string="Conductor"/>
                <field name="customer_name" string="Cliente"/>
                <field name="customer_phone" string="Tel√©fono"/>
                <field name="pickup_address" string="Origen"/>
                <field name="delivery_address" string="Destino"/>
                <field name="scheduled_date" string="Fecha Programada"/>
                <field name="estimated_delivery_time" string="Hora Estimada"/>
                <field name="state" string="Estado" widget="badge" 
                       decoration-info="state == 'new'"
                       decoration-primary="state == 'assigned'"
                       decoration-warning="state in ('pickup', 'package', 'delivering')"
                       decoration-success="state == 'delivered'"
                       decoration-danger="state in ('incident', 'failed')"
                       decoration-muted="state == 'cancelled'"/>
                <field name="priority" string="Prioridad" widget="priority"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_delivery_order_form" model="ir.ui.view">
        <field name="name">rsexpress.delivery.order.form</field>
        <field name="model">rsexpress.delivery.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Entrega">
                <header>
                    <button name="action_assign" string="‚úì Asignar" type="object" 
                            class="oe_highlight" invisible="state != 'new'"/>
                    <button name="action_pickup" string="üìç En Recolecci√≥n" type="object" 
                            class="oe_highlight" invisible="state != 'assigned'"/>
                    <button name="action_package" string="üì¶ Empaquetando" type="object" 
                            class="oe_highlight" invisible="state != 'pickup'"/>
                    <button name="action_delivering" string="üöö En Ruta" type="object" 
                            class="oe_highlight" invisible="state != 'package'"/>
                    <button name="action_delivered" string="‚úÖ Entregado" type="object" 
                            class="oe_highlight" invisible="state != 'delivering'"/>
                    <button name="action_incident" string="‚ö†Ô∏è Reportar Incidente" type="object" 
                            class="btn-warning" invisible="state not in ('assigned', 'pickup', 'package', 'delivering')"/>
                    <button name="action_failed" string="‚ùå Marcar Fallida" type="object" 
                            class="btn-danger" invisible="state not in ('assigned', 'pickup', 'package', 'delivering', 'incident')"/>
                    <button name="action_cancel" string="üö´ Cancelar" type="object" 
                            class="btn-secondary" invisible="state not in ('new', 'assigned')"/>
                    <button name="action_view_on_map" string="üó∫Ô∏è Ver en Mapa" type="object" 
                            class="btn-info" invisible="not delivery_lat or not delivery_lon"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="new,assigned,pickup,package,delivering,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_on_map" type="object" class="oe_stat_button" icon="fa-map-marker"
                                invisible="not delivery_lat or not delivery_lon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Ver en</span>
                                <span class="o_stat_text">Mapa</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="order_code" readonly="1" placeholder="AUTO"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informaci√≥n General">
                            <field name="vehicle_id" required="1"/>
                            <field name="driver_id"/>
                            <field name="scheduled_date" required="1"/>
                            <field name="estimated_delivery_time"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group string="Tiempos de Ejecuci√≥n">
                            <field name="assigned_time" readonly="1"/>
                            <field name="pickup_time" readonly="1"/>
                            <field name="package_time" readonly="1"/>
                            <field name="delivering_time" readonly="1"/>
                            <field name="delivered_time" readonly="1"/>
                            <field name="pickup_duration_minutes" readonly="1" invisible="state not in ('package', 'delivering', 'delivered', 'incident', 'failed')"/>
                            <field name="package_duration_minutes" readonly="1" invisible="state not in ('delivering', 'delivered', 'incident', 'failed')"/>
                            <field name="delivery_duration_minutes" readonly="1" invisible="state not in ('delivered', 'incident', 'failed')"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Informaci√≥n del Cliente">
                            <group>
                                <group string="Datos de Contacto">
                                    <field name="customer_name" required="1"/>
                                    <field name="customer_phone" widget="phone" required="1"/>
                                    <field name="customer_email" widget="email"/>
                                    <field name="customer_id_number"/>
                                </group>
                                <group string="Valores">
                                    <field name="amount_total" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="payment_method"/>
                                </group>
                            </group>
                        </page>

                        <page string="Direcciones y GPS">
                            <group>
                                <group string="üìç Punto de Recolecci√≥n">
                                    <field name="pickup_address" required="1"/>
                                    <field name="pickup_lat"/>
                                    <field name="pickup_lon"/>
                                    <field name="pickup_reference"/>
                                </group>
                                <group string="üéØ Punto de Entrega">
                                    <field name="delivery_address" required="1"/>
                                    <field name="delivery_lat"/>
                                    <field name="delivery_lon"/>
                                    <field name="delivery_reference"/>
                                </group>
                            </group>
                        </page>

                        <page string="Paquete">
                            <group>
                                <group string="Dimensiones">
                                    <field name="package_weight"/>
                                    <field name="package_dimensions"/>
                                </group>
                                <group string="Contenido">
                                    <field name="package_description"/>
                                    <field name="package_type"/>
                                </group>
                            </group>
                            <group>
                                <field name="special_instructions" placeholder="Instrucciones especiales de manejo o entrega..."/>
                            </group>
                        </page>

                        <page string="Prueba de Entrega">
                            <group>
                                <group string="Firma">
                                    <field name="signature" widget="image" options="{'size': [200, 100]}"/>
                                    <field name="signature_name"/>
                                </group>
                                <group string="Evidencia Fotogr√°fica">
                                    <field name="delivery_proof_photo" widget="image" options="{'size': [300, 200]}"/>
                                </group>
                            </group>
                            <group>
                                <field name="delivery_notes" placeholder="Notas sobre la entrega, persona que recibi√≥, condiciones especiales, etc."/>
                            </group>
                        </page>

                        <page string="Incidentes" invisible="state not in ('incident', 'failed')">
                            <group>
                                <field name="incident_type" invisible="state != 'incident'"/>
                                <field name="incident_description" placeholder="Describa el incidente o motivo de fallo..." invisible="state not in ('incident', 'failed')"/>
                                <field name="incident_photo" widget="image" options="{'size': [300, 200]}" invisible="state not in ('incident', 'failed')"/>
                            </group>
                        </page>

                        <page string="Auditor√≠a">
                            <group>
                                <group string="Creaci√≥n">
                                    <field name="create_uid" readonly="1"/>
                                    <field name="create_date" readonly="1"/>
                                </group>
                                <group string="√öltima Modificaci√≥n">
                                    <field name="write_uid" readonly="1"/>
                                    <field name="write_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_delivery_order_kanban" model="ir.ui.view">
        <field name="name">rsexpress.delivery.order.kanban</field>
        <field name="model">rsexpress.delivery.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" 
                    quick_create="false" 
                    sample="1">
                <field name="order_code"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="customer_name"/>
                <field name="customer_phone"/>
                <field name="delivery_address"/>
                <field name="scheduled_date"/>
                <field name="state"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="order_code"/>
                                        </strong>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="customer_name"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-phone"/> <field name="customer_phone"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-truck"/> <field name="vehicle_id"/>
                                    </div>
                                    <div t-if="record.driver_id.raw_value">
                                        <i class="fa fa-id-card"/> <field name="driver_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-map-marker"/> <field name="delivery_address"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar"/> <field name="scheduled_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_delivery_order_search" model="ir.ui.view">
        <field name="name">rsexpress.delivery.order.search</field>
        <field name="model">rsexpress.delivery.order</field>
        <field name="arch" type="xml">
            <search string="Buscar √ìrdenes">
                <field name="order_code" string="C√≥digo" filter_domain="[('order_code', 'ilike', self)]"/>
                <field name="customer_name" string="Cliente" filter_domain="[('customer_name', 'ilike', self)]"/>
                <field name="customer_phone" string="Tel√©fono" filter_domain="[('customer_phone', 'ilike', self)]"/>
                <field name="vehicle_id" string="Veh√≠culo"/>
                <field name="driver_id" string="Conductor"/>
                <field name="delivery_address" string="Direcci√≥n"/>
                
                <filter name="filter_new" string="Nuevas" domain="[('state', '=', 'new')]"/>
                <filter name="filter_assigned" string="Asignadas" domain="[('state', '=', 'assigned')]"/>
                <filter name="filter_in_progress" string="En Proceso" domain="[('state', 'in', ['pickup', 'package', 'delivering'])]"/>
                <filter name="filter_delivered" string="Entregadas" domain="[('state', '=', 'delivered')]"/>
                <filter name="filter_incident" string="Con Incidente" domain="[('state', '=', 'incident')]"/>
                <filter name="filter_failed" string="Fallidas" domain="[('state', '=', 'failed')]"/>
                <filter name="filter_cancelled" string="Canceladas" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter name="filter_today" string="Hoy" domain="[('scheduled_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="Esta Semana" domain="[('scheduled_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('scheduled_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter name="filter_priority_high" string="Alta Prioridad" domain="[('priority', '=', '3')]"/>
                <filter name="filter_priority_medium" string="Prioridad Media" domain="[('priority', '=', '2')]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter name="group_state" string="Estado" context="{'group_by': 'state'}"/>
                    <filter name="group_vehicle" string="Veh√≠culo" context="{'group_by': 'vehicle_id'}"/>
                    <filter name="group_driver" string="Conductor" context="{'group_by': 'driver_id'}"/>
                    <filter name="group_date" string="Fecha Programada" context="{'group_by': 'scheduled_date'}"/>
                    <filter name="group_priority" string="Prioridad" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_delivery_order_calendar" model="ir.ui.view">
        <field name="name">rsexpress.delivery.order.calendar</field>
        <field name="model">rsexpress.delivery.order</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Entregas" 
                      date_start="scheduled_date" 
                      color="state"
                      event_open_popup="true"
                      quick_create="false"
                      mode="month">
                <field name="order_code"/>
                <field name="customer_name"/>
                <field name="vehicle_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_delivery_order" model="ir.actions.act_window">
        <field name="name">√ìrdenes de Entrega</field>
        <field name="res_model">rsexpress.delivery.order</field>
        <field name="view_mode">kanban,list,form,calendar</field>
        <field name="context">{'search_default_filter_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primera orden de entrega
            </p>
            <p>
                Las √≥rdenes de entrega permiten gestionar todo el ciclo de vida de una entrega,
                desde la asignaci√≥n hasta la confirmaci√≥n con firma digital y prueba fotogr√°fica.
            </p>
        </field>
    </record>

</odoo>
