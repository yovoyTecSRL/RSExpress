<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban - Pedidos RSExpress -->
    <record id="view_rsexpress_delivery_kanban" model="ir.ui.view">
        <field name="name">rsexpress.delivery.order.kanban</field>
        <field name="model">rsexpress.delivery.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="pickup_address"/>
                <field name="delivery_address"/>
                <field name="customer_name"/>
                <field name="state"/>
                <field name="vehicle_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge" t-attf-class="badge-#{record.state.raw_value == 'new' ? 'info' : record.state.raw_value == 'assigned' ? 'primary' : record.state.raw_value == 'on_route' ? 'warning' : record.state.raw_value == 'delivered' ? 'success' : 'danger'}">
                                        <field name="state"/>
                                    </span>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="customer_name"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-map-marker text-primary"/> 
                                        <strong>Desde:</strong> <field name="pickup_address"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-flag-checkered text-success"/> 
                                        <strong>Hasta:</strong> <field name="delivery_address"/>
                                    </div>
                                    <div t-if="record.vehicle_id.raw_value">
                                        <i class="fa fa-truck"/> <field name="vehicle_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
