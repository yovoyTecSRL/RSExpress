<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción Principal - Pedidos RSExpress -->
    <record id="action_rsexpress_orders_list" model="ir.actions.act_window">
        <field name="name">Pedidos de Entrega</field>
        <field name="res_model">rsexpress.delivery.order</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primer pedido de entrega
            </p>
            <p>
                Gestiona todos tus pedidos de entrega desde aquí.
            </p>
        </field>
    </record>
    
    <!-- Menú Raíz RSExpress -->
    <menuitem id="menu_rsexpress_root" 
              name="RSExpress" 
              sequence="10"/>
    
    <!-- Submenú Pedidos -->
    <menuitem id="menu_rsexpress_orders" 
              name="Pedidos" 
              parent="menu_rsexpress_root" 
              sequence="10"/>
    
    <!-- Item de Menú - Ver Pedidos -->
    <menuitem id="menu_rsexpress_orders_list" 
              name="Ver Pedidos" 
              parent="menu_rsexpress_orders" 
              action="action_rsexpress_orders_list" 
              sequence="10"/>
</odoo>
